// prisma/schema.prisma

// Use MongoDB as the datasource
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Use Prisma Client for JavaScript
generator client {
  provider = "prisma-client-js"
}

// -----------------------Project Model---------------------

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  slug        String   @unique
  image       String?
  tags        String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// -----------------------Settings-------------------------

// My Contact Links
model ContactLink {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  slug      String   @unique
  image     String?
  href      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// My Skills 
model Skill {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  slug      String   @unique
  image     String?
  href      String
  score     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
